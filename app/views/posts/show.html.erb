<h1><%= @post.title %></h1>
<div>
<% if can? :manage, @post %>
  <%=link_to @post.user_full_name, edit_user_path(@post.user) %><br>
  Click name to change password
<% else %>
  <%= @post.user.full_name %>
<% end %>
</div>

<div>
Category: <%=@post.category.title %>
</div>

<section>
Tags: <%= @post.tags.map(&:name).join(', ') %>
</section>

<p><%= @post.body %></p>

<% if can? :manage, @post %>
<%= link_to 'Edit', edit_post_path(@post) %>
